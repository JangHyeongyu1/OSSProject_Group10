#include <stdio.h>
#include <windows.h>


int score = 0; //처음 점수는 0으로 설정
int heart = 100; //처음 체력을 100으로 설정


void gotoxy(int x, int y)
{
	COORD pos = { x,y };
	SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE), pos);
}

void map()
{
    int i;
    for (i = 1; i < 40; i++)//x
    {
        gotoxy(i, 0);
        printf("■");
	gotoxy(i , 40);
        printf("■");
    }
    for (i = 0; i < 40; i++)//y
    {
        gotoxy(0, i );
        printf("■");
        gotoxy(40, i );
        printf("■");
    }
}
